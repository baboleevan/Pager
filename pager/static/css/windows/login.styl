.window
  .login
    background-size 320px 480px
    width 320px
    height 480px
    position absolute
    top 50%
    left 50%
    margin-top -(480/2)px
    margin-left -(320/2)px
    .headline
      text-align center
      img
        margin 120px 0 0 0
        width 181px
    .rows
      margin 0 auto
      padding 90px 0 0 0
      width 258px
      .row
        border 1px solid
        height 40px
        margin 0 0 6.5px 0
        .icon
          width 40px
          height 40px
          display table-cell
          vertical-align middle
          text-align center
          img
            width (34 / 2)px
            height (34 / 2)px
        .text
          height 40px
          width 258 - 40 px
          display table-cell
          vertical-align middle
          color #f2f2f2
          font-size 17px
          padding 0 0 0 12px
        &.facebook
          cursor pointer
          .icon
            background-color #59c5d8
          background-color #63dbf0
          border-color #59c5d8
          &.hover
            background-color #59c5d8
        &.email
          cursor pointer
          .icon
            background-color #bebebe
          background-color #d4d4d4
          border-color #bebebe
          &.hover
            background-color #bebebe
    .footer
      text-align center
      margin-top 28px
      img
        width 70px

