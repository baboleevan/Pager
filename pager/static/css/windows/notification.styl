.notification
  background-color #464646
  .user_portrait
      width 30px
      border-radius 30px
  .body_section
    li
      float none
    .notice_list_wrapper
      .notice_list_element
        &.grey
          background-color #eaeaea
        &.yellow
          background-color #f9ef7c
        &.green
          background-color #a9d97e
        &.blue
          background-color #63dbf0
        &.red
          background-color #f2a6a6
      .notice_list_element, .notice_alarm_element
        cursor pointer
        height 43px
        border-bottom 1px solid #565656
        .element_wrapper
          width 320px
          margin 0 auto
          .user_portrait, .text_wrapper, .notice_alarm_icon
            display inline-block
          .notice_alarm_icon, .user_portrait
            width 30px
            margin 6px 10px 6px 10px
          .text_wrapper
            vertical-align top
            margin-top 10px
            b
              font-weight bold
              margin-right 5px
            font-size 12px
            width 260px
            height 30px
            margin-top 6px
            color #464646
            .contents
              font-size 14px
      .notice_alarm_element
        .element_wrapper
          .text_wrapper
            color #fff
            font-size 12px
            margin-top 6px
            b
              font-weight bold
  .bottom_of_notice
    position absolute
    bottom 0
    width 100%
    .setting_line, .about_user_line
      .wrapper
        margin 0 auto
        width 320px
    .setting_line
      background-color rgba(0, 0, 0, 0.3)
      border-bottom 1px solid #000
      .wrapper
        height 20px
        font-size 12px
        font-weight bold
        color #b8b8b8
        padding-top 10px
        padding-left 10px
    .about_user_line
      border-top 1px solid #565656
      .wrapper
        height 44px
        .user_portrait, .user_info, .setting_button
          display inline-block
        .user_portrait
          margin 6.5px 10px 6.5px 10px
        .user_info
          color #fff
          font-size 13px
          font-weight bold
          margin-top 15px
          vertical-align top
        .setting_button
          cursor pointer
          width 20px
          float right
          margin-top 12px
          margin-right 15px
  .navi_bar
    .for_background_color
      background-color rgba(0, 0, 0, 0.3)
      border-bottom 1px solid #272727
    .center_page_name
      font-weight bold
      color #fff
      width 200px
      margin 12px auto
