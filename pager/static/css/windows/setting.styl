.setting
  width 100%
  .body_section
    background-color #fdfdfd
    width 300px
    margin 20px auto
    .switcher_button
      cursor pointer
      width 75px
      height 24px
      border-radius 5px
      position relative
      background-color #b8b8b8
      padding-top 6px
      .on, .off
        font-weight bold
        font-size 17px
        color #fff
      .on
        margin-left 10px
        display none
      .off
        margin-left 38px
        display block
      .button
        position absolute
        top 0px
        left 0px
        background-color #eaeaea
        border 1px solid #b8b8b8
        border-radius 5px
        width 28px
        height 28px
      &.selected
        background-color #a9d97e
        .button
          left 45px
        .off
          display none
        .on
          display block
    .portraits_setting
      cursor pointer
      .wrapper
        margin 20px auto
        position relative
        width 100px
        height 100px
        border-radius 3px
        border 1px solid #b8b8b8
        background-color #fff
        .profile_image
          background-image url('../img/profile_default.png')
          background-size 95px 95px
          width 95px
          height 95px
          margin 2.5px 2.5px 2.5px 2.5px
        .change_icon
          position absolute
          top 2.5px
          right 2.5px
          img
            width 21px
    .input_information
      .input_name, .input_email
        margin 10px auto
        width 298px
        border 1px solid #b8b8b8
        input
          text-align center
          width 100%
      .input_name
        height 40px
        background-color #fff
        input
          height 30px
          margin-top 5px
          font-size 24px
          color #d5d5d5
          font-weight bold
      .input_email
        height 30px
        position relative
        background-color #ebebeb
        input
          height 20px
          margin-top 5px
          font-size 15px
          color #bebebe
        img
          width 13px
          position absolute
          top 8px
          right 8px
    .section_title
      font-weight bold
      font-size 17px
      color #b8b8b8
      margin-left 10px
      margin-bottom 7.5px
    .font_choice_wrapper, .text_to_speech, .notification_wrapper, .talk_with_pager, .about, .logout
      width 298px
      border-radius 5px
      border 1px solid #b8b8b8
      font-weight bold
      font-size 15px
      color #464646
    .text_to_speech, .talk_with_pager, .about
      height 44px
    .font
      margin-top 15px
      .font_choice_wrapper
        height 122px
        color #464646
        .font_element
          cursor pointer
          border-top 1px solid #b8b8b8
          &.non-border
            border-top 0
          p
            margin-left 10px
            padding-top 12.5px
            height 27.5px
            vertical-align top
          p, .checker
            display inline-block
          .checker
            border-radius 25px
            background-color #eaeaea
            width 25px
            height 25px
            margin-top 7px
            margin-right 10px
            float right
            img
              width 13px
              margin 5pxauto
              display none
          &.selected
            .checker
              width 23.5px
              height 23.5px
              background-color #f9ef7c
              border 1.5px solid #b8b8b8
              img
                display block
    .text_to_speech, .notification_in_setting
      margin-top 20px
      .icon
        width 25px
        margin-left 10px
        margin-top 9.5px
      .icon, .description, .switcher_button
        display inline-block
      .description
        vertical-align top
        margin-top 16.5px
        margin-left 5px
      .switcher_button
        float right
        margin 7px
    .notification_in_setting
      .notification_wrapper
        height 82px
        .icon
          margin-top 7.5px
        .description
          margin-top 12.5px
        .facebook_area
          height 40px
          border-bottom 1px solid #b8b8b8
        .email_area
          height 40px
        .switcher_button
          margin 5px
    .talk_with_pager, .about, .logout
      cursor pointer
    .talk_with_pager
      margin-top 20px
      img, .text_wrapper_for_center
        display inline-block
      img
        margin-top 7px
        width 30px
        margin-left 10px
      .text_wrapper_for_center
        width 258px
        margin-left -30px
        vertical-align top
        margin-top 14.5px
        text-align center
    .about
      text-align center
      margin-top 15px
      p
        margin-top 14.5px
    .logout
      margin-top 15px
      margin-bottom 15px
      height 44px
      color #fff
      text-align center
      background-color #d04f4f
      p
        margin-top 15px
      img
        vertical-align top
        margin-top -2px
        margin-left 5px
        width 18px
  .navi_bar
    width 100%
    .contents
      .page_title
        width 200px
        margin-left -40px
