.signup
  .navi_bar
    width 100%
    .contents
      .page_title
        width 200px
        margin 12px auto
        margin-left -40px
  .body_section
    .portraits_setting
      cursor pointer
      .wrapper
        margin 20px auto
        position relative
        width 100px
        height 100px
        border-radius 3px
        border 1px solid #b8b8b8
        background-color #fff
        .profile_image
          background-image url('../img/profile_default.png')
          background-size 95px 95px
          width 95px
          height 95px
          margin 2.5px 2.5px 2.5px 2.5px
        .change_icon
          position absolute
          top 2.5px
          right 2.5px
          img
            width 21px
    .input_information
      .input_name, .input_email
        margin 10px auto
        width 280px
        border 1px solid #b8b8b8
        input
          width 100%
          text-align center
      .input_name
        height 40px
        background-color #fff
        input
          height 30px
          margin-top 5px
          font-size 24px
          color #d5d5d5
          font-weight bold
      .input_email
        height 30px
        position relative
        background-color #ebebeb
        input
          height 20px
          margin-top 5px
          font-size 15px
          color #bebebe
        img
          width 13px
          position absolute
          top 8px
          right 8px
